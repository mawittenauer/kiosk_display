<div class="weather-module">
  <h2>Current Weather</h2>
  <div class="weather-info">
    <div class="temperature-display">
      <span class="temperature"><%= data[:current_weather][:temperature] %>¬∞F</span>
      <span class="feels-like">Feels like <%= data[:current_weather][:feels_like] %>¬∞F</span>
    </div>
    
    <div class="weather-details">
      <div class="weather-icon">
        <img src="http://openweathermap.org/img/wn/<%= data[:current_weather][:icon] %>@2x.png" alt="Weather Icon">
      </div>
      <div class="description"><%= data[:current_weather][:description] %></div>
    </div>
    
    <div class="additional-info">
      <div class="humidity">Humidity: <span class="humidity"><%= data[:current_weather][:humidity] %>%</span></div>
      <div class="location">üìç <%= data[:current_weather][:city] %></div>
      <div class="last-updated">Updated: <%= data[:current_weather][:last_updated] %></div>
    </div>
  </div>

  <h3 class="forecast-title">5-Day Forecast</h3>
  <div class="forecast-row">
    <% data[:forecast].first(5).each do |day| %>
      <div class="forecast-col">
        <div class="forecast-date"><%= Date.parse(day[:date]).strftime('%a') %></div>
        <img src="http://openweathermap.org/img/wn/<%= day[:icon] %>@2x.png" alt="<%= day[:description] %>">
        <div class="forecast-temp"><%= day[:temperature] %>¬∞F</div>
        <div class="forecast-desc"><%= day[:description] %></div>
      </div>
    <% end %>
  </div>
</div>

