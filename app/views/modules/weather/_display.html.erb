  }
  
  .weather-details {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .weather-icon img {
    width: 80px;
    height: 80px;
  }
  
  .description {
    font-size: 1.4em;
    font-weight: 500;
  }
  
  .additional-info > div {
    margin: 8px 0;
