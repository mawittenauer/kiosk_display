<div class="weather-module">
  <h2>Current Weather</h2>
  <div class="weather-info">
    <div class="temperature-display">
      <span class="temperature"><%= data[:temperature] %>°F</span>
      <span class="feels-like">Feels like <%= data[:feels_like] %>°F</span>
    </div>
    
    <div class="weather-details">
      <div class="weather-icon">
        <img src="http://openweathermap.org/img/wn/<%= data[:icon] %>@2x.png" alt="Weather Icon">
      </div>
      <div class="description"><%= data[:description] %></div>
    </div>
    
    <div class="additional-info">
      <div class="humidity">Humidity: <span class="humidity"><%= data[:humidity] %>%</span></div>
      <div class="location">📍 <%= data[:city] %></div>
      <div class="last-updated">Updated: <%= data[:last_updated] %></div>
    </div>
  </div>
</div>

<style>
  .weather-module h2 {
    margin-top: 0;
    text-align: center;
    font-size: 1.8em;
    margin-bottom: 25px;
  }
  
  .weather-info {
    text-align: center;
  }
  
  .temperature-display {
    margin-bottom: 20px;
  }
  
  .temperature {
    font-size: 4em;
    font-weight: bold;
    display: block;
    line-height: 1;
  }
  
  .feels-like {
    font-size: 1.2em;
    opacity: 0.8;
  }
  
  .weather-details {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .weather-icon img {
    width: 80px;
    height: 80px;
  }
  
  .description {
    font-size: 1.4em;
    font-weight: 500;
  }
  
  .additional-info > div {
    margin: 8px 0;
    font-size: 1.1em;
  }
  
  .last-updated {
    opacity: 0.6;
    font-size: 0.9em !important;
  }
</style>
